<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Company"
    android:background="@color/whiteBodyColor"
    style="@style/parent.contentLayout">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="List of companies visited"
                style="@style/viewParent.headerText" />
            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_edittext_bg"
                android:hint="Search"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/statusBarColor"
                android:layout_marginBottom="15dp"
                android:drawableEnd="@drawable/ic_search_black"
                android:paddingEnd="10dp"
                android:textColorHint="@color/miniTitleColor"
                android:textStyle="bold"
                android:inputType="textCapWords"
                android:maxLines="1"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/list2020"
                    android:text="#2020"
                    android:background="@drawable/circle_btn_back"
                    android:textColor="@color/whiteBodyColor"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/list2019"
                    android:text="#2019"
                    android:textColor="@color/miniTitleColor"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/list2018"
                    android:text="#2018"
                    android:textColor="@color/miniTitleColor"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/list2017"
                    android:text="#2017"
                    android:textColor="@color/miniTitleColor"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>









        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>